<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditExamActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_edit_exam">
    <LinearLayout
        android:id="@+id/exam_buttons"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/back"/>
        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/save"/>
        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/delete"/>

    </LinearLayout>
    <EditText
        app:layout_constraintTop_toBottomOf="@id/exam_buttons"
        android:id="@+id/clinical_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/clinical_notes"
        android:minLines="2"/>
    <Button
        android:id="@+id/new_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_image"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/clinical_notes"
        app:layout_constraintBottom_toTopOf="@id/new_image"
        android:id="@+id/exam_images"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>